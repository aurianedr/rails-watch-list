<h1 class ="text-center mt-3"> My List</h1>


  <ul class = "list-unstyled">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 1000, crop: :fill %>')">
      <li><%= link_to list.name, list_path(list), :class =>"text-decoration-none link-info" %></li>
    </div>
    <% end %>
  </ul>
<%= link_to "Create a new list", new_list_path, :class => "btn btn-outline-primary mt-3 mb-3" %>
