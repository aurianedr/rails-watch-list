<h2 class ="text-center fst-italic opacity-50 fw-bold"><%= @list.name %></h2>

<div class="container">
  <% @list.movies.each do |movie|%>
  <% bookmark = Bookmark.find_by(list: @list, movie:movie) %>
    <div>
    <img src="<%=movie.poster_url%>" alt="<%= movie.title %>" width= 100px>
    <h2> <%= movie.title %> </h2>
    <p><%= movie.overview %></p>
    <%= bookmark.comment %>
    <%= link_to 'Delete this bookmark', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?????" } %>
    </div>
  <%end%>
</div>

<p> <%= link_to "Back to lists", lists_path, :class => "btn btn-outline-secondary"%> </p>
<p> <%= link_to "Add a movie",  new_list_bookmark_path(@list), :class => "btn btn-outline-secondary"%> </p>
